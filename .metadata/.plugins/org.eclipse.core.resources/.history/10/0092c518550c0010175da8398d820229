package loop;

public class WhileEx1 {

	public static void main(String[] args) {
		// 반복문 - 초기값, 종료값, 증감값
		int n = 1; //초기값
		
		/*while(n <= 10) { //종료값(조건식)
			System.out.println("Hello~" + n);
			n++; //n = n + 1, n += 1 //증감값
		}*/
		
		//1 ~ 10까지의 합계
		int sum = 0; //합계를 저장할 변수 sum 선언
		while(n <= 10) {
			sum += n //sum = sum + n;
		}
		System.out.println("합계: " + sum);
		
	}

}
