package choice;

public class ifElseEx1 {

	public static void main(String[] args) {
		/* 
		 * 조건문 - if문
		 * 나이가 15세 이상이면 "관람가", 그렇지 않으면 "관람 불가"
		 */
		
		int age = 14;
		
//		if(age >= 15) {
	//		System.out.println("관람가");
		//}
		//System.out.println("나이는 " + age + "세 입니다.");

		//if ~ else 구문		
		if(age >= 15) {
			System.out.println("관람가");
		}else {
			System.out.println("관람불가");
		}
		System.out.println("나이는 " + age + "세 입니다.");

		
	}

}
